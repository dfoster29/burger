<div class="jumbotron text-center">
  <h1>Burgers!</h1>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-12 mb-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add</button>
      </form>
    </div>
  </div>

  <div class="row">

    <div class="col-md-6">
      <h2>Burger Menu:</h2>

      <ul>
        {{#each burger_name}} {{#unless devoured}} {{> burgers/burgers-block devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Burgers you've ate:</h2>

      <ul>
        {{#each burger-name}} {{#if devoured}} {{/if}} {{/each}}
      </ul>
    </div>

  </div>
</div>